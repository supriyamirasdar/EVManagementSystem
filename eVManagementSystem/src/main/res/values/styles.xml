<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- Style for grayBackgronu2. -->
    <style name="Gray">

        <!-- <item name="android:background">#507cfe</item> -->
        <item name="android:background">#bdbdbd</item>
    </style>

    <style name="MyTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyTheme.ActionBar.ActionBarText</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:background">@color/appcolor</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyTheme.ActionBar.ActionBarText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

     <style name="SBBlackLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    
    <!-- Style for Button. -->
    <style name="SBButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/appcolor</item>
    </style>

    <!--  -->
    <!-- Style for Small Label. -->
    <style name="SBSmallLabel" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SBSmallWhiteLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style for Normal Label. -->
    <style name="SBLabel" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue1</item>
    </style>

    <style name="SBItalicLabel" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue1</item>
    </style>

    <!-- Style for Large Label. -->
    <style name="SBLargeLabel" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SBLargeWhiteLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Style for Large Label. -->
    <style name="SBWhiteLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Style for Red Label. -->
    <style name="SBRedLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style for Spinner. -->
    <style name="SBSpinner">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Style for AutoComplete. -->
    <style name="SBAutoComplete">
        <item name="android:popupBackground">@color/appcolor</item>
        <item name="android:textColor">#000000</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/editview_style</item>
        <item name="android:padding">6dp</item>
    </style>

    <!-- Style for TextBox. -->
    <style name="SBTextBox">
        <item name="android:background">@drawable/editview_style</item>
        <!-- <item name="android:textColorHint">@color/black</item> -->
        <item name="android:padding">8dp</item>
    </style>

    <!-- Style for Toast. -->
    <style name="SBToast">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Backgronud. -->
    <style name="SBBackground">
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- Style for Small Label. -->
    <style name="SBSmallLabel1" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue1</item>
    </style>

    <style name="SBButton1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/appcolor</item>
    </style>

    <style name="Background">

        <!-- <item name="android:background">#507cfe</item> -->
        <!-- <item name="android:background">#4474c1</item> -->
        <!-- <item name="android:background">#025371</item> Blue -->
        <!-- <item name="android:background">@color/lightpurple</item> -->
        <item name="android:background">@color/appcolor</item>
    </style>

    <style name="Label" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">15sp</item>
    </style>
    
     <style name="White">

        <!-- <item name="android:background">#507cfe</item> -->
        <item name="android:background">#ffffff</item>
    </style>
     <style name="SBVerySmallLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">#005500</item>
        <!-- dark green -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>