<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/appcolor"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ComplaintClose"
            style="@style/SBWhiteLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Recharge Reservation Booking"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="0.8"       
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:filterTouchesWhenObscured="false"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbarTrackVertical="@drawable/scroller_virtical_track" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"                
                android:background="@drawable/border"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lblBookingId"
                        style="@style/SBItalicLabel"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="BookingId" />

                    <TextView
                        android:id="@+id/lblSemiColon1"
                        style="@style/SBItalicLabel"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txtBookingId"
                        style="@style/SBItalicLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lblName"
                        style="@style/SBItalicLabel"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Customer Name" />

                    <TextView
                        android:id="@+id/lblSemiColon2"
                        style="@style/SBItalicLabel"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txtName"
                        style="@style/SBItalicLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lblDate"
                        style="@style/SBItalicLabel"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Date" />

                    <TextView
                        android:id="@+id/lblSemiColon3"
                        style="@style/SBItalicLabel"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txtDate"
                        style="@style/SBItalicLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lblTime"
                        style="@style/SBItalicLabel"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Time" />

                    <TextView
                        android:id="@+id/lblSemiColon4"
                        style="@style/SBItalicLabel"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txtTime"
                        style="@style/SBItalicLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lblDuration"
                        style="@style/SBItalicLabel"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Duration" />

                    <TextView
                        android:id="@+id/lblSemiColon5"
                        style="@style/SBItalicLabel"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txtDuration"
                        style="@style/SBItalicLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lblChargeType"
                        style="@style/SBItalicLabel"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Charge Type" />

                    <TextView
                        android:id="@+id/lblSemiColon6"
                        style="@style/SBItalicLabel"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txtChargeType"
                        style="@style/SBItalicLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lblFinalCharge"
                        style="@style/SBItalicLabel"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="FinalCharge" />

                    <TextView
                        android:id="@+id/lblSemiColon7"
                        style="@style/SBItalicLabel"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txtFinalCharge"
                        style="@style/SBItalicLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lblPrice"
                        style="@style/SBItalicLabel"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Price" />

                    <TextView
                        android:id="@+id/lblSemiColon8"
                        style="@style/SBItalicLabel"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txtPrice"
                        style="@style/SBItalicLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnConfirm"
            style="@style/SBButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="Confirm" />

        <Button
            android:id="@+id/btnReject"
            style="@style/SBButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@color/red"
            android:text="Reject" />
    </LinearLayout>

</LinearLayout>